{
  "name": "mercury-sdk",
  "version": "1.0.0",
  "description": "handles subscriptions, data retrieval and processing of mercury indexer",
  "main": "dist/index.js",
  "repository": "https://github.com/paltalabs/mercury-sdk",
  "author": "paltalabs",
  "files": [
    "dist/**/*",
    "postinstall.js"
  ],
  "license": "GPL-3.0",
  "private": false,
  "keywords": [
    "mercury",
    "indexer",
    "stellar",
    "soroban"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/dev.ts",
    "doc": "typedoc --plugin typedoc-plugin-missing-exports",
    "format": "prettier --write ./src",
    "postinstall": "node postinstall.js",
    "start:example": "ts-node src/example.ts",
    "test": "jest --watchAll",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.21.0",
    "@stellar/stellar-sdk": "^12.1.0",
    "axios": "^1.6.2",
    "bigint-conversion": "^2.4.3",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "typedoc-plugin-missing-exports": "^2.2.0",
    "typescript": "^5.3.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "cpy-cli": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.7"
  }
}
